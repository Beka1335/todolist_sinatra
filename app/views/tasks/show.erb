<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
<br>
<div class="container ">
  <div class="row d-flex justify-content-center align-items-center">
    <div style="text-align:center">
      <h1>Hello <%=@user.name %>!</h1>
      <a href="/lists/new"><button type="button" class="btn btn-outline-primary">Create A New List</button></a>
    </div>

    <div class="col-6 align-items-center"  >

      <% @lists.each do |list|%>
        <% if list.user_id == @user.id %>
          <table class="table" style="text-align:center">
            <thead class="thead-dark">
              <tr>
                <br>
                <br>
                <th scope="col"><h4><%= list.name %></h4></th>
                <th scope="col">
                <a href="/lists/<%=list.id%>/edit"><button type="button" class="btn btn-outline-secondary" >Edit List</button></a>
                <a href="tasks/new/<%=list.id%>"><button type="button" class="btn btn-outline-secondary" >New Task</button></a>
                <a ref="/lists/<%=list.id%>/delete"><button type="button" class="btn btn-outline-danger" href="/lists/<%=list.id%>/delete">Delete List</button></a>
                </th>
              </tr>
            </thead>
          </table>
          <table class="table"  style="text-align:center">
            <thead class="thead-dark" >
              <tr>
              <th scope="col">Tasks</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% list.todos.each do |task| %>
                <tr>
                  <td><%= task.name %></td>
                  <td>
                    <a href="/tasks/<%= task.id %>/edit"><button type="button" class="btn btn-outline-secondary" >Edit</button></a>
                    <a href="/tasks/<%= task.id %>/delete"><button type="button" class="btn btn-outline-danger" >Delete</button></a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
